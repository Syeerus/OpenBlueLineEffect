{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "alwaysStrict": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "outDir": "bin",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
